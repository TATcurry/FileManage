<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://94.191.85.22:3306/file-online-manager"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--指定java bean生成的位置-->
        <javaModelGenerator targetPackage="cn.jxufe.beans.model" targetProject="E:\MyDemo\work\FileManage\FileManage-beans\target\classes">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--指定mapper映射文件位置

        -->
        <sqlMapGenerator targetPackage="mapper"  targetProject="E:\MyDemo\work\FileManage\FileManage-dao\target\classes">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>


        <!--指定dao接口生成位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="cn.jxufe.dao.mysql"  targetProject="E:\MyDemo\work\FileManage\FileManage-dao\target\classes">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--指定每个表的生成策略-->
        <table tableName="tab_User" domainObjectName="User" />
        <table tableName="tab_UserRole" domainObjectName="UserRole"/>
        <table tableName="tab_Department" domainObjectName="Department"/>
        <table tableName="tab_Role" domainObjectName="Role"/>
        <table tableName="tab_Permission" domainObjectName="Permission"/>
        <table tableName="tab_RolePerm" domainObjectName="RolePerm"/>
        <table tableName="tab_File" domainObjectName="File"/>

    </context>
</generatorConfiguration>